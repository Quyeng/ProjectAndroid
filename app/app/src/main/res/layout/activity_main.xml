<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="wrap_content"
        android:layout_height="241dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/username"
        android:textColor="#93907E"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_icon_user"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon_user"
        android:layout_width="28dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usericon" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/iconmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cart"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/cart_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_shirt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        app:srcCompat="@drawable/ao" />

    <TextView
        android:id="@+id/tv_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shirt"
        android:textColor="#93907E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_shirt"
        app:layout_constraintStart_toStartOf="@+id/img_shirt"
        app:layout_constraintTop_toBottomOf="@+id/img_shirt" />

    <ImageView
        android:id="@+id/img_pant"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        app:srcCompat="@drawable/quan" />

    <TextView
        android:id="@+id/tv_pant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pant"
        android:textColor="#93907E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_pant"
        app:layout_constraintStart_toStartOf="@+id/img_pant"
        app:layout_constraintTop_toBottomOf="@+id/img_pant" />

    <ImageView
        android:id="@+id/img_shoes"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shirt"
        app:srcCompat="@drawable/shoes" />

    <TextView
        android:id="@+id/tv_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shoes"
        android:textColor="#93907E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_shoes"
        app:layout_constraintStart_toStartOf="@+id/img_shoes"
        app:layout_constraintTop_toBottomOf="@+id/img_shoes" />

    <ImageView
        android:id="@+id/img_watch"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pant"
        app:srcCompat="@drawable/watch" />

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Watch"
        android:textColor="#93907E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_watch"
        app:layout_constraintStart_toStartOf="@+id/img_watch"
        app:layout_constraintTop_toBottomOf="@+id/img_watch" />

</androidx.constraintlayout.widget.ConstraintLayout>