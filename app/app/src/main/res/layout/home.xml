<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landscape" />

    <ImageView
        android:id="@+id/img_content"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/iconmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="User Name"
        android:textColor="#93907E"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_icon_user"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon_user"
        android:layout_width="28dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usericon" />

    <ImageView
        android:id="@+id/img_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_content"
        app:srcCompat="@drawable/ao" />

    <ImageView
        android:id="@+id/img_pant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_content"
        app:srcCompat="@drawable/quan" />

    <ImageView
        android:id="@+id/img_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_shirt"
        app:srcCompat="@drawable/giay" />

    <ImageView
        android:id="@+id/img_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_pant"
        app:srcCompat="@drawable/phukien" />

    <TextView
        android:id="@+id/tv_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Shirt"
        android:textColor="#93907E"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_shirt"
        app:layout_constraintStart_toStartOf="@+id/img_shirt"
        app:layout_constraintTop_toBottomOf="@+id/img_shirt" />

    <TextView
        android:id="@+id/tv_pant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pant"
        android:textColor="#93907E"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_pant"
        app:layout_constraintStart_toStartOf="@+id/img_pant"
        app:layout_constraintTop_toBottomOf="@+id/img_pant" />

    <TextView
        android:id="@+id/tv_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Shoes"
        android:textColor="#93907E"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_shoes"
        app:layout_constraintStart_toStartOf="@+id/img_shoes"
        app:layout_constraintTop_toBottomOf="@+id/img_shoes" />

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Watch"
        android:textColor="#93907E"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_watch"
        app:layout_constraintStart_toStartOf="@+id/img_watch"
        app:layout_constraintTop_toBottomOf="@+id/img_watch" />

    <Button
        android:id="@+id/img_cart"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/cart_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_menu"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>